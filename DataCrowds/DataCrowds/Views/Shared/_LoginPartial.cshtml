@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <div class="login">
            <span class="hidden-xs text-uppercase">Hello @User.Identity.GetUserName()!</span>
            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-user"></i> <span class="hidden-xs text-uppercase">Sign out</span></a>
        </div>
