<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="robots" content="all,follow">
    <meta name="googlebot" content="index,follow,snippet,archive">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,500,700,800' rel='stylesheet' type='text/css'>

    <!-- Bootstrap and Font Awesome css -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @* Jika berada di homepage *@
</head>
<body>
    @*<ul style="margin-top: 10em;">
        <li>@Request.RawUrl</li>
        <li>@Request.Url.AbsolutePath - Absolute Path</li>
        <li>@Request.Url.AbsoluteUri - Absolute Uri</li>
        <li>@Request.Url.OriginalString - Original String</li>
        <li>@Request.FilePath - File Path</li>
        <li>@Request.Url.LocalPath - Local Path</li>
        <li>@Path.GetFileName(Request.PhysicalPath) - Local Path</li>
    </ul>*@
    @Html.Partial("_HeaderPartial")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complement")
    @Scripts.Render("~/bundles/bootstrap")

    @{
        var pageName = Path.GetFileName(Request.PhysicalPath);
        if (pageName.Equals("DataCrowds"))
        {
            @Styles.Render("~/Content/css/owl");
            @Scripts.Render("~/bundles/owl");
        }
        else if (pageName.Equals("Marketplace"))
        {
            @Scripts.Render("~/bundles/jqueryval");
        }
    }
    @RenderSection("scripts", required: false)
</body>
</html>